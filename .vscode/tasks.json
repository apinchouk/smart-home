{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Release build",
            "type": "shell",
            "command": "go build",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "arm",
                    "GOARM": "7"
                }
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Debug build",
            "type": "shell",
            "command": "go build -gcflags -N",
            "options": {
                "env": {
                    "GOOS": "linux",
                    "GOARCH": "arm",
                    "GOARM": "7"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "doc",
            "type": "shell",
            "command": "godoc -http=:6060 -goroot=%GOPATH%"
        },
        {
            "label": "ssh launch",
            "type": "shell",
            "command": "plink -pw c5hCTYw+ root@192.168.1.200 '/tmp/smart-home'",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
